<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".reminder">

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_arrow" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="197dp"
        android:layout_height="32dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="Workout Reminders"
        android:textColor="@color/secondaryColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="40dp"
        android:text="Select the days you want to exercise"
        android:textAlignment="center"
        android:textColor="@color/secondaryColor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView46" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="411dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView47">

        <TextView
            android:id="@+id/textView48"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/circle_bg"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/secondaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/circle_un_bg"
            android:gravity="center"
            android:text="M"
            android:textColor="@color/secondaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/circle_un_bg"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/secondaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/circle_bg"
            android:gravity="center"
            android:text="W"
            android:textColor="@color/secondaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView52"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/circle_un_bg"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/secondaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView53"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/circle_bg"
            android:gravity="center"
            android:text="F"
            android:textColor="@color/secondaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView54"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/circle_un_bg"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/secondaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView55"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="26dp"
        android:text="Select the times you want to exercise"
        android:textAlignment="center"
        android:textColor="@color/secondaryColor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout1" />

    <ImageView
        android:id="@+id/imageView36"
        android:layout_width="306dp"
        android:layout_height="203dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView55"
        app:srcCompat="@drawable/time_picker" />

    <Button
        android:id="@+id/button5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/accentColor"
        android:text="Create a reminder"
        android:textColor="@color/secondaryColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView36" />

    <!-- Bottom Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/trainingsIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="1dp"
            app:srcCompat="@drawable/trainings"
            app:layout_constraintStart_toEndOf="@id/homeIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activityIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="1dp"
            app:srcCompat="@drawable/activity"
            app:layout_constraintStart_toEndOf="@id/trainingsIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="1dp"
            app:srcCompat="@drawable/profile1"
            app:layout_constraintStart_toEndOf="@id/activityIcon"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>